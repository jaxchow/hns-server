#!/usr/bin/env node 
process.title = 'hns-serve';

var app=require("../app/app");
var args = process.argv.slice(2).reverse();
var params={};
while(args.length>0){
	arg=args.pop();
	switch(arg){
		case '-p','--port':
			params['port']=args.pop();
			break;
		case '-l','--live':
			params['live']=true;
			break;
		defaults:
			params['file']=args.pop();	
			break;
	}

}
console.log(params);
app.startup(params['port']);
